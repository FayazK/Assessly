{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            "ziggy-js": [
                "./vendor/tightenco/ziggy"
            ]
        },
        "jsx": "react-jsx"
    },
    "include": [
        "resources/js/**/*.js",
        "resources/js/**/*.d.js",
        "resources/js/**/*.jsx"
    ]
}
